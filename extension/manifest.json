{
    "manifest_version": 3,
    "name": "API Insight",
    "version": "1.0",
    "description": "A professional API inspection tool for Chrome DevTools.",
    "devtools_page": "devtools.html",
    "permissions": [
        "tabs",
        "storage",
        "webRequest",
        "webRequestBlocking",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}